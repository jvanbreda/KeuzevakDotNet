<Window x:Class="WpfApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication"
        mc:Ignorable="d"
        Title="Math Quiz" Height="350" Width="525">
    <Grid>
        <Label x:Name="Title" Content="The Math Quiz" HorizontalAlignment="Left" Margin="170,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.381,-0.059" FontSize="26"/>
        <Label x:Name="question" Content="Label" HorizontalAlignment="Left" Margin="41,101,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="answerField" HorizontalAlignment="Left" Height="23" Margin="41,132,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="confirm" Content="Confirm" HorizontalAlignment="Left" Margin="41,176,0,0" VerticalAlignment="Top" Width="75"/>
        <ProgressBar x:Name="progessBar" HorizontalAlignment="Left" Height="23" Margin="147,132,0,0" VerticalAlignment="Top" Width="235" Opacity="0"/>
    </Grid>
</Window>
